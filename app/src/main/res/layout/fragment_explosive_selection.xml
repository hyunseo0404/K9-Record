<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.gtpd.k9.k9record.ExplosiveSelectionFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/selectExplosiveLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:text="@string/select_explosives" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/explosiveList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/selectExplosiveLabel"
                android:layout_marginTop="16dp" />

            <!--<Button
                android:id="@+id/explosiveContinueButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/explosiveList"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_alignParentEnd="true"
                android:textAlignment="center"
                android:text="@string/continue_label" />-->

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/next_page_fab"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_next"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="28dp"
        android:layout_marginRight="28dp"
        android:clickable="true"/>

</RelativeLayout>
